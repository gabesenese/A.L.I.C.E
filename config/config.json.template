  "user": {
    "name": "User",
    "location": null,
    "timezone": null,
    "preferred_voice": "default",
    "language": "en-US"
  },
  "llm": {
    "model": "llama3.3:70b",
    "base_url": "http://localhost:11434",
    "temperature": 0.7,
    "max_history": 20,
    "timeout": 120
  },
